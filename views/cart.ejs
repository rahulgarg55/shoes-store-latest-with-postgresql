<div id="cart-items">
    <% cartItems.forEach(function(shoe) { %>
      <div class="cart-item">
        <img src="<%= shoe.image %>" alt="<%= shoe.name %>">
        <div>
          <h5><%= shoe.name %></h5>
          <p><%= shoe.price %></p>
        </div>
      </div>
    <% }) %>
  </div>
  <script>
    
    function addToCart(shoeId) {
      fetch(`/${shoeId}/add-to-cart`, { method: 'POST' })
        .then(function(response) {
          if (response.ok) {
            location.reload();
          } else {
            throw new Error('Failed to add item to cart');
          }
        })
        .catch(function(error) {
          console.error('Error adding item to cart:', error);
        });
    }
  </script>
  <style>
    #cart-items {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 20px;
    }
  
    .cart-item {
      display: flex;
      align-items: center;
      width: 300px;
      border: 1px solid #ddd;
      padding: 10px;
    }
  
    
    .cart-item img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      margin-right: 10px;
    }
  
    
    .cart-item div {
      flex: 1;
    }
  
    .cart-item h5 {
      margin: 0;
      font-size: 16px;
    }
  
    .cart-item p {
      margin: 5px 0;
      font-size: 14px;
      color: #888;
    }
  </style>
  
  