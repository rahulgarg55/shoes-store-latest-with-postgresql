<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <style>
    .card {
      width: 300px;
      margin-right: 10px;
    }

    .card-img {
      height: 200px;
      object-fit: cover;
    }

    .container {
      margin-top: 50px;
    }

    .cart-heading {
      margin-bottom: 20px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="cart-heading">Added to Cart Products</h2>
    <% if (cartItems.length > 0) { %>
      <div class="row">
        <% cartItems.forEach(function(item) { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <img src="<%= item.image %>" class="card-img" alt="<%= item.name %>">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.name %></h5>
                    <p class="card-text">Price: $<%= item.price %></p>
                    <form action="/delete-item" method="POST" style="display: inline;">
                      <input type="hidden" name="itemId" value="<%= item.id %>">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No items in the cart.</p>
    <% } %>
    <a href="/" class="btn btn-primary">Back to Store</a>
    <button onclick="redirectToHomepage()" class="btn btn-primary">Go to Homepage</button> <!-- Added button -->
  </div>
  <script>
    function removeFromCart(shoeId) {
      axios.post(`/${shoeId}/remove-from-cart`)
        .then(function(response) {
          if (response.status === 200) {
            location.reload();
          } else {
            throw new Error('Failed to remove item from cart');
          }
        })
        .catch(function(error) {
          console.error('Error removing item from cart:', error);
        });
    }

    function redirectToHomepage() {
      window.location.href = "/"; // Redirects to the homepage
    }
  </script>
</body>
</html>
